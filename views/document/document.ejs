                    <div class="tab-pane fade" id="nav-treat" role="tabpanel" aria-labelledby="nav-treat-tab"><%= names[0].treat %></div>
                    <div class="tab-pane fade" id="nav-site" role="tabpanel" aria-labelledby="nav-site-tab"><%= names[0].site %></div>
                    <div class="tab-pane fade" id="nav-institution" role="tabpanel" aria-labelledby="nav-institution-tab"><%= names[0].institution %></div>
                    <div class="tab-pane fade" id="nav-supervisor" role="tabpanel" aria-labelledby="nav-supervisor-tab"><%= names[0].supervisor %></div>
                    <div class="tab-pane fade" id="nav-etc" role="tabpanel" aria-labelledby="nav-etc-tab"><%= names[0].etc %></div>
                </div>
            </div>
        </div>
        <script src="/javascripts/favorite_manager.js"></script>
